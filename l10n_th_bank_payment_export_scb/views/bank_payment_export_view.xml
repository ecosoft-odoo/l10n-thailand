<odoo>
    <record id="bank_payment_export_view_form" model="ir.ui.view">
        <field name="name">bank.payment.export.view.form</field>
        <field name="model">bank.payment.export</field>
        <field
            name="inherit_id"
            ref="l10n_th_bank_payment_export.bank_payment_export_view_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='information']//group[@name='left_information']"
                position="inside"
            >
                <field name="scb_is_editable" invisible="1" />
                <field
                    name="scb_bank_type"
                    string="Bank Type"
                    widget="radio"
                    attrs="{'invisible': [('scb_is_editable', '!=', True)], 'required': [('scb_is_editable', '!=', False)]}"
                />
                <field
                    name="scb_product_code"
                    string="Product Code"
                    attrs="{'invisible': [('scb_is_editable', '!=', True)], 'required': [('scb_is_editable', '!=', False)]}"
                />
            </xpath>
            <xpath
                expr="//page[@name='information']/group[@name='system_config']"
                position="inside"
            >
                <field
                    name="config_scb_company_id"
                    options="{'no_create': True, 'no_create_edit': True}"
                    domain="[('field_id.name', '=', 'config_scb_company_id')]"
                    attrs="{'invisible': [('scb_is_editable', '!=', True)], 'required': [('scb_is_editable', '!=', False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
