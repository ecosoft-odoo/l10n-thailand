<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='communication']" position="after">
                <field name="scb_product_code" />
                <field
                    name="scb_service_type"
                    attrs="{
                        'invisible': [('scb_product_code', 'not in', ['MCL', 'PA4', 'PA5', 'PA6'])],
                        'required': [('scb_product_code', 'in', ['MCL', 'PA4', 'PA5', 'PA6'])]
                    }"
                />
                <field
                    name="scb_service_type_bahtnet"
                    attrs="{
                        'invisible': [('scb_product_code', '!=', 'BNT')],
                        'required': [('scb_product_code', '=', 'BNT')]
                    }"
                />
                <field
                    name="scb_delivery_mode"
                    attrs="{
                        'invisible': [('scb_product_code', 'not in', ['MCP', 'DDP', 'CCP'])],
                        'required': [('scb_product_code', 'in', ['MCP', 'DDP', 'CCP'])]
                    }"
                />
                <field
                    name="scb_pickup_location"
                    attrs="{
                        'invisible': [('scb_delivery_mode', '!=', 'C')],
                        'required': [('scb_delivery_mode', '=', 'C')]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
